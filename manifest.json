{

  "description": "Web extension to assist housing search on Kijiji",
  "manifest_version": 2,
  "name": "FindAHouse",
  "version": "1.0",
  "homepage_url": "https://kionokitse.wordpress.com/findahouse/",
  "icons": {
    "48": "Otter.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.kijiji.ca/*"],
      "js": ["FindAHouse.js"]
    }
  ]

}
